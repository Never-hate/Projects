    <link href="https://vjs.zencdn.net/8.10.0/video-js.css" rel="stylesheet" />
    
    <style>
        body {
            background-color: #000;
            color: #ffffff;
            font-family: 'Segoe UI', Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .container {
            width: 100%;
            max-width: 900px;
            text-align: center;
            position: relative;
        }

        h2 {
            margin-bottom: 15px;
            font-size: 24px;
            color: #ff0000; 
            letter-spacing: 3px;
            text-transform: uppercase;
            font-weight: bold;
        }

        /* Black Player Styling */
        .video-js {
            width: 100%;
            aspect-ratio: 16 / 9;
            border: 1px solid #222;
            border-radius: 4px;
            box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.9);
        }

        /* Unmute Button Overlay */
        #unmute-btn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(255, 0, 0, 0.9);
            color: white;
