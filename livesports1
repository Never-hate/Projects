<body>

    <div class="container">
        <h2>LIVE SPORTS</h2>
        
        <div id="unmute-btn" onclick="activatePlayer()">CLICK TO UNMUTE</div>

        <video
            id="sports-player"
            class="video-js vjs-big-play-centered vjs-theme-city"
            controls
            preload="auto"
            autoplay
            muted
            playsinline
            data-setup='{"pictureInPictureToggle": true}'>
            <source src="https://iptv.prisma.net.bd/hls/stream2/playlist.m3u8" type="application/x-mpegURL">
        </video>
    </div>

    <script src="https://vjs.zencdn.net/8.10.0/video.min.js"></script>

    <script>
        var player = videojs('sports-player');

        // Autoplay enable kora
        player.ready(function() {
            var playPromise = player.play();

            if (playPromise !== undefined) {
                playPromise.then(_ => {
                    // Autoplay start hoyeche muted obosthay
                    if (player.muted()) {
                        document.getElementById('unmute-btn').style.display = 'block';
                    }
                }).catch(error => {
                    // Jodi browser block kore, manually button dekhabe
                    document.getElementById('unmute-btn').style.display = 'block';
                });
            }
        });

        // Unmute ebong Full Sound function
        function activatePlayer() {
            player.muted(false);
            player.volume(1.0);
            player.play();
            document.getElementById('unmute-btn').style.display = 'none';
        }

        // Screen-e click korle auto-unmute trick
        document.body.addEventListener('click', function() {
            activatePlayer();
        }, { once: true });

        // PIP (Picture-in-Picture) logic
        if ('pictureInPictureEnabled' in document) {
            console.log("PIP is supported and enabled.");
        }
    </script>
</body>
</html>
