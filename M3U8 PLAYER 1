    <!-- Background Effects -->
    <div class="bg-blob blob-1"></div>
    <div class="bg-blob blob-2"></div>

    <div class="app-container">
        
        <!-- Controls Panel -->
        <div class="glass-panel controls-area">
            <!-- Top Box: URL -->
            <div class="input-group">
                <label for="streamUrl">üîó Stream URL (M3U8 / MP4)</label>
                <div class="main-input-row">
                    <input type="text" id="streamUrl" placeholder="https://example.com/stream.m3u8">
                    <button id="playBtn">‚ñ∂ Play</button>
                </div>
            </div>

            <!-- Bottom Boxes: Headers -->
            <div class="secondary-inputs-row">
                <div class="input-group">
                    <label for="refererVal">‚Ü©Ô∏è Referrer Value</label>
                    <input type="text" id="refererVal" placeholder="https://referrer-site.com">
                </div>
                <div class="input-group">
                    <label for="cookieVal">üç™ Cookie Value</label>
                    <input type="text" id="cookieVal" placeholder="key=value; other=123">
                </div>
            </div>
        </div>

        <!-- Video Player Panel -->
        <div class="glass-panel video-wrapper">
            <video id="videoPlayer" controls playsinline></video>
            <div id="statusBadge" class="status-badge">Ready</div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const video = document.getElementById('videoPlayer');
            const playBtn = document.getElementById('playBtn');
            const urlInput = document.getElementById('streamUrl');
            const refererInput = document.getElementById('refererVal');
            const cookieInput = document.getElementById('cookieVal');
            const statusBadge = document.getElementById('statusBadge');
            
            let hls = null;

            const updateStatus = (msg) => {
                statusBadge.textContent = msg;
                statusBadge.classList.add('visible');
                setTimeout(() => statusBadge.classList.remove('visible'), 3000);
            };

            const loadStream = () => {
                const url = urlInput.value.trim();
                const referer = refererInput.value.trim();
                const cookie = cookieInput.value.trim();

                if (!url) {
                    alert("Please enter a URL");
                    return;
                }

                // Clean up previous HLS instance
                if (hls) {
                    hls.destroy();
                    hls = null;
                }

                // Check for HLS support via HLS.js
                if (Hls.isSupported() && (url.includes('.m3u8') || !url.includes('.'))) {
                    updateStatus("Loading HLS...");
                    
                    const config = {
                        xhrSetup: function (xhr, url) {
                            // ATTEMPTING to set headers. 
                            // Note: Modern browsers (CORS) block unsafe headers like 'Referer' and 'Cookie' 
                            // set from client-side JS for security reasons, but this logic follows the prompt.
                            if (referer) {
                                try { xhr.setRequestHeader('Referer', referer); } catch(e) { console.warn("Cannot set Referer", e); }
                                try { xhr.setRequestHeader('X-Referer', referer); } catch(e) {} // Alt header
                            }
                            if (cookie) {
                                // Cookies are typically handled by `withCredentials` or document.cookie, 
                                // manually setting 'Cookie' header is usually forbidden by XMLHttpRequest spec.
                                try { xhr.setRequestHeader('Cookie', cookie); } catch(e) { console.warn("Cannot set Cookie header", e); }
                            }
                        }
                    };

                    hls = new Hls(config);
                    hls.loadSource(url);
                    hls.attachMedia(video);
                    
                    hls.on(Hls.Events.MANIFEST_PARSED, function() {
                        updateStatus("Playing HLS");
                        video.play().catch(e => console.log("Auto-play prevented"));
                    });

                    hls.on(Hls.Events.ERROR, function (event, data) {
                        if (data.fatal) {
                            switch (data.type) {
                                case Hls.ErrorTypes.NETWORK_ERROR:
                                    console.log('fatal network error encountered, try to recover');
                                    hls.startLoad();
                                    break;
                                case Hls.ErrorTypes.MEDIA_ERROR:
                                    console.log('fatal media error encountered, try to recover');
                                    hls.recoverMediaError();
                                    break;
                                default:
                                    console.log('cannot recover');
                                    hls.destroy();
                                    break;
                            }
                        }
                    });

                } 
                // Native HLS (Safari) or standard HTML5 video (mp4/webm)
                else if (video.canPlayType('application/vnd.apple.mpegurl') || url.includes('.mp4') || url.includes('.webm')) {
                    updateStatus("Native Video Mode");
                    video.src = url;
                    video.addEventListener('loadedmetadata', function() {
                        video.play().catch(e => console.log("Auto-play prevented"));
                    });
                } else {
                    // Fallback try
                    updateStatus("Trying Standard Load...");
                    video.src = url;
                    video.play();
                }
            };

            playBtn.addEventListener('click', loadStream);
            
            // Allow Enter key to play
            urlInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') loadStream();
            });
        });
    </script>
</body>
</html>
